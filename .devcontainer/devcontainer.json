{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "hostRequirements": {
      "cpus": 2
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "pip install -r requirements.txt",
    "postCreateCommand": "",
    "postAttachCommand": {
      "server": "flask --debug run"
    },
    "portsAttributes": {
      "5353": {
        "label": "Application",
        "onAutoForward": "openPreview"
      }
    },
    "customizations": {
      "codespaces": {
        "openFiles": []
      },
      "vscode": {
        "extensions": [
          "ms-python.python"
        ]
      }
    },
    "forwardPorts": [8000]
  }